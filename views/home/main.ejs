<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>

  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="wrap">
      <button type="button" class="main-platform-1">Nintendo Switch</button>
      <button type="button" class="main-platform-2">Online PC</button>
      <button type="button" class="main-platform-3">Play Station4</button>
      <button type="button" class="main-platform-4">Mobile Game</button>

      <div class="container">
        <form action="/search" method="get" class="main-form" autocomplete="off">
          <div class="finder">
            <div class="finder__outer">
              <div class="finder__inner">

                <button class="finder__icon" ref="icon" type="submit"></button>
                <input minLength="2" type="text" name="searchText" value="<%= searchText %>" class="finder__input" placeholder="     게임을 검색하세요">

              </div>
            </div>
          </div>
        </form>
      </div>

    </div>

  </body>

</html>
