<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head') %>

  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="wrap">

      <form action="/platform" method="get">
        <button type="submit" class="search-platform-1" value="Nintendo">Nintendo Switch</button>
        <button type="submit" class="search-platform-2" value="Online">온라인 PC</button>
        <button type="submit" class="search-platform-3" value="Steam">Steam</button>
        <button type="submit" class="search-platform-4" value="Mobile">모바일 게임</button>
      </form>

      <div class="search-text">
        검색 결과
      </div>

      <div class="search-wrap">
        <% if(games == null || games.length == 0){ %>
          <div class="search-result">There is no data to show :(</div>
        <% } %>
        <% games.forEach(function(game) { %>
          <div class="search-result"><a href="<%= game.siteURL %>"><img src="<%= game.image %>"  width="350" height="250"></a></div>
        <% }) %>
      </div>

      <div class="container">
        <form action="/search" method="get" class="search-form" autocomplete="off">
          <div class="finder">
            <div class="finder__outer">
              <div class="finder__inner">

                <button class="finder__icon" ref="icon" type="submit"></button>
                <input class="finder__input" minLength="2" type="text" name="searchText" value="<%= searchText %>" placeholder="     게임을 검색하세요">

              </div>
            </div>
          </div>
        </form>
      </div>

    </div>


  </body>

</html>
